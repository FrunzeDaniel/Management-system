@page
@model Company.Pages.Projects.AssignEmployeeModel
@{
}
<h1>Assign Employee</h1>

@if (Model.errorMessage.Length > 0)
{
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<strong>@Model.errorMessage</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Employee</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="employeeId" value="@Model.workOn.employeeId">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Project</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="projectId" value="@Model.workOn.projectId">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Hours</label>
		<div class="col-sm-6">
			<input type="number" class="form-control" name="hours" value="@Model.workOn.hours">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
				<div class="row mb-3">
					<div class="col-sm-9">
						<div class="alert alert-success alert-dismissible fade show" role="alert">
							<strong>@Model.successMessage</strong>
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
						</div>
					</div>
				</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>