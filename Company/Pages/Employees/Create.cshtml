@page
@model Company.Pages.Employees.CreateModel
@{
}

<h1>New Client</h1>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" vlaue="@Model.employee.name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Birth Date</label>
		<div class="col-sm-6">
			<input type="date" class="form-control" name="bDate" vlaue="@Model.employee.bDate">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Address</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="address" vlaue="@Model.employee.address">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Sex</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="sex" vlaue="@Model.employee.sex">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Salary</label>
		<div class="col-sm-6">
			<input type="number" class="form-control" name="salary" vlaue="@Model.employee.salary">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Department</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="departmentId" vlaue="@Model.employee.departmentId">
		</div>
	</div>

	@if(Model.succesMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.succesMessage</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>